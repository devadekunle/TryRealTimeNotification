@page
@model IndexModel
@{
    
    ViewData["Title"] = "Home page";
}
    
    <div class="container">
        <div class="row m-3 ">
            <div class="col-md-9 p-3 card justify-content-center shadow" id="usernameCard">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Enter Username</label>
                        <input type="text" class="form-control" id="usernameInput" aria-describedby="emailHelp" placeholder="Enter username">
                        <br />
                    </div>

                    <button type="submit" id="submitName" class="w-100 btn btn-primary">Submit</button>

                </form>
            </div>

        </div>
        
        <div class="row mt-3">
            <div class="col-md-6 p-3 card justify-content-center shadow" id="messageCard">
                <form>

                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Type a message</label>
                        <textarea class="form-control" id="messageBox" rows="3"></textarea>
                    </div>
                    <button type="submit" id="sendMessage" class="w-100 btn btn-success">>>>></button>
                </form>
            </div>
            <div class="col-md-3" id="userCard">
               <p class="alert alert-success shadow-sm" role="alert" id="currentUser">
                   
               </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-9 p-3">
                <ul class="list-group shadow" id="messages">
                  
                </ul>
            </div>
        </div>
    </div>
    